@model DAHAR.ViewModels.TaxExemptIncome.EditTaxExemptIncomeViewModel

@{
    ViewBag.Title = "Edit Tax Exempt Income";
}

<div class="col-12">
    <form asp-action="Edit" method="post" asp-route-id="@Model.TaxExemptIncomeId">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.TaxExemptIncomeId)
        <div class="card">
            <div class="card-header">
                <a href="@Url.Action("Index", "TaxExemptIncome")" class="btn btn-danger">Back</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TaxExemptIncomeCode">Code</label>
                            <input type="text" asp-for="TaxExemptIncomeCode" placeholder="Ex: TK0, K1."
                                   class="form-control @(ViewData.ModelState["TaxExemptIncomeCode"]?.Errors.Any() == true ? "is-invalid" : "")">
                            <span asp-validation-for="TaxExemptIncomeCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TaxExemptIncomeName">Name</label>
                            <input type="text" asp-for="TaxExemptIncomeName" placeholder="Ex: Tidak Kawin, Kawin."
                                   class="form-control @(ViewData.ModelState["TaxExemptIncomeName"]?.Errors.Any() == true ? "is-invalid" : "")">
                            <span asp-validation-for="TaxExemptIncomeName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>
