@model IEnumerable<DAHAR.Models.CompanyModel>

@{
    ViewData["Title"] = "Companies List";
    var iteration = 1;
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <a href="@Url.Action("Create", "Company")" class="btn btn-primary"><i class="fas fa-plus-square mr-2"></i>Company</a>
        </div>

        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Action</th>
                    </tr>
                </thead>
               <tbody>
                    @foreach (var item in Model!)
                    {
                        <tr>
                            <td>@iteration</td>
                            <td>@item.CompanyCode</td>
                            <td>@item.CompanyName</td>
                            <td>@(item.Location?.LocationName ?? "-")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Company", new { id = item.CompanyID })" class="btn btn-warning">Edit</a>
                            </td>
                        </tr>
                        iteration++;
                    }
               </tbody>
            </table>
        </div>
    </div>
</div>