@{
    ViewData["Title"] = Resource.AttendanceMenu;
}
<form id="attendanceForm">
    @Html.AntiForgeryToken()
</form>

<div class="col-12">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
                <span class="info-box-icon bg-info elevation-1"><i class="far fa-calendar"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">@Resource.CalendarDays</span>
                    <span class="info-box-number" id="total-days">
                        0
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-scroll"></i></span>

                <div class="info-box-content">
                    <span class="info-box-text">@Resource.TimeOff</span>
                    <span class="info-box-number" id="time-off">0</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <!-- fix for small devices only -->
        <div class="clearfix hidden-md-up"></div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-warning elevation-1"><i class="far fa-calendar-check"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">@Resource.AllowanceDays</span>
                    <span class="info-box-number" id="meal-days">0</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-success elevation-1"><i class="fas fa-money-bill-wave"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">@Resource.Allowance</span>
                    <span class="info-box-number" id="meal-allowance-days">0</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
    </div>
    <div class="row">
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-primary elevation-1"><i class="fas fa-calendar-alt"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">@Resource.WorkDays</span>
                    <span class="info-box-number" id="work-days">0</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
                <span class="info-box-icon bg-danger elevation-1"><i class="far fa-calendar-times"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Alpha</span>
                    <span class="info-box-number" id="alpha-days">
                        0
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->

        <!-- /.col -->
        <!-- fix for small devices only -->
        <div class="clearfix hidden-md-up"></div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-yellow elevation-1"><i class="fas fa-hourglass-end"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">@Resource.Late</span>
                    <span class="info-box-number" id="late-days">0</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-success elevation-1"><i class="fas fa-wallet"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">@Resource.AllowanceTotal</span>
                    <span class="info-box-number" id="meal-total">0</span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
    </div>
    <div class="card">
        <div class="card-header">
            <div class="card-tools">
                <div class="form-group d-flex align-items-center">
                    <div class="flex-grow-1 mr-3">
                        @Html.DropDownList("SelectedPeriod", (SelectList)ViewBag.Periods,
                            htmlAttributes: new { @class = "form-control select2bs4", style = "width: 100%;" })
                    </div>
                    <button type="button" id="loadAttendanceUser" class="btn btn-success">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

            </div>
        </div>
        <div class="card-body">
            <div class="row mt-1">
                <div class="col-lg-12">
                    <table id="attendanceRow" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="text-center">No</th>
                            <th>@Resource.Date</th>
                            <th>@Resource.In</th>
                            <th>@Resource.Out</th>
                            <th class="text-center">Status</th>
                            <th>Notes</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


