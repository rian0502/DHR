@model DHR.ViewModels.Department.CreateDepartmentViewModel
@{
    ViewData["Title"] = "Register Department";
}

<div class="col-12">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-header">
                <a href="@Url.Action("Index", "Department")" class="btn btn-danger">Back</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="DepartmentCode">Code</label>
                            <input type="text" class="form-control @(ViewData.ModelState["DepartmentCode"]?.Errors.Any() == true ? "is-invalid" : "")" asp-for="DepartmentCode" placeholder="Ex: IT, ACT">
                            <span asp-validation-for="DepartmentCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="DepartmentName">Name</label>
                            <input type="text" class="form-control @(ViewData.ModelState["DepartmentName"]?.Errors.Any() == true ? "is-invalid" : "")" asp-for="DepartmentName" placeholder="Ex: Accounting, Finance, Information Technology">
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-right">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>