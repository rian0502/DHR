@model IEnumerable<DAHAR.Models.PeriodModel>

@{
    ViewData["Title"] = "List Periods";
    var iteration = 1;
}

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <div class="card-tools">
                <a href="@Url.Action("Create", "Periods")" class="btn btn-info">
                    <i class="fas fa-plus mr-2"></i>
                    Add New
                </a>
            </div>
        </div>
        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>No</th>
                    <th>Start Period</th>
                    <th>End Period</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@iteration</td>
                        <td>@item.StartPeriodDate.ToString("dd MMMM yyyy")</td>
                        <td>@item.EndPeriodDate.ToString("dd MMMM yyyy")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Periods", new { id = item.PeriodId })"
                               class="btn btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    iteration++;
                }
                </tbody>
            </table>
        </div>
    </div>
</div>