@{
    ViewData["Title"] = "List Companies";
}

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Action</th>
                    </tr>
                </thead>
               <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>@Model[i].CompanyCode</td>
                            <td>@Model[i].CompanyName</td>
                            <td>@Model[i].LocationModel?.LocationName</td>
                            <td>
                                <a href="@Url.Action("Edit", "Companies", new { id = Model[i].CompanyID })" class="btn btn-info">Edit</a>
                            </td>
                        </tr>
                    }
               </tbody>
            </table>
        </div>
    </div>
</div>