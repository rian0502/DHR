@model IEnumerable<EmployeeMedicalClaim>
@{
    ViewData["Title"] = Resource.OutpatientCare;
    var iteration = 1;
}

<div class="col-12">
    @if (!Model.Any())
    {
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> @Resource.Notice!</h5>
            @Resource.UserOutpatientNullAlert
        </div>
    }
    <div class="card">
        <div class="card-header">
            <div class="card-tools">
                <a href="@Url.Action("DownloadForm", "MedicalClaim")" class="btn btn-info">
                    <i class="fas fa-file-download mr-2"></i>
                    Form
                </a>
            </div>
        </div>

        <div class="card-body">
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>No</th>
                    <th>@Resource.Code</th>
                    <th>@Resource.Date</th>
                    <th>Diagnosis</th>
                    <th>Period</th>
                    <th>Payment</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@iteration</td>
                        <td>@item.EmployeeMedicalClaimCode</td>
                        <td>@(item.ClaimDate?.ToString("dd/MMM/yyyy"))</td>
                        <td>@item.Diagnosis</td>
                        <td>@item.Period?.StartPeriodDate.ToString("dd/MM/yyyy") - @item.Period?.EndPeriodDate.ToString("dd/MM/yyyy")</td>
                        <td>@(item.PaymentPeriod?.ToString("MMMM/yyyy"))</td>
                    </tr>
                    iteration++;
                }
                </tbody>
            </table>

        </div>
    </div>
</div>